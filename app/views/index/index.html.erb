<div id="myform"> 
<div class="fade"></div>
<div class="formcreate">
	<div class="nameul"><b class="fixb" >НОВАЯ ЗАДАЧА</b></div>
	<%= form_for :todos, url: todos_path, :html =>{:id => "formform"} do |f| %>
		<br>
		<div class="buttons">
    		<%= f.text_field  :text %>
    		
    		<%= f.text_field  :isCompleted, :value => false  %>
  		</div>	
		<br>
		<div class="buttons">
			<%= f.select :project_id, options_for_select([['Семья', 1], ['Работа', 2], ['Прочее', 3]]) %>
		</div>
		<br>
			<div class="buttons">
				<a href="#" onclick="closeform()">
