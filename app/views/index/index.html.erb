<div class="divm"><div class="divtitle">Задачи</div><b><div class="atitle"><a class="afix" href="#" onclick="openform()">+</a></div></b></div>
	<script type="text/javascript">
		function update(x) {
			var h = 0;
		text = document.getElementById(x+'text').innerHTML;
		com = document.getElementById(x+'com').innerHTML;
		id = document.getElementById(x+'id').innerHTML;
		document.getElementById('todos_text').value = text;
		document.getElementById('todos_project_id').value = id;
			if (com == "false") {
				document.getElementById('todos_isCompleted').value = true;
			} else{
				document.getElementById('todos_isCompleted').value = false;
			}
		document.forms["formform"].submit();
		setTimeout(function() {location.reload();}, 1000);
		}
	</script>
<table>
	<tr>
<td class="uld">
<div class="nameul"><b>СЕМЬЯ</b></div>

	<ul>
		<%= @Todo1.find_each do |t| %>
		<%= 
			if (t.isCompleted==false)
				puts @g = 'noneline', @c=' ', @r = "false"
			else
				puts @g = 'line', @c="checked='true'", @r = "true"	 
			end
		%>
		<li>
			<input type="checkbox" class="fixbox" disabled <%= @c %>>
			<div id="<%= @f=@f+1 %>" class="<%= @g %>">
				<a href="#" onclick="update(<%= @f %>)">
					<div id="<%= @f %>text" class="colorfix"><%=  t.text  %></div>
				<div class="nonevision">
					<div id="<%= @f %>com"><%= @r %></div>
					<div id="<%= @f %>id"><%= t.project_id %></div>
				</div>
				</a>
			</div>
		</li>
		<% end %>
	</ul>
</td>
<td class="uld">
<div class="nameul"><b>РАБОТА</b></div>
